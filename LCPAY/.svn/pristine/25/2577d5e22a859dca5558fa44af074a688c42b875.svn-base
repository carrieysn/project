package com.cifpay.lc.std.sched.task.sms;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;

import com.cifpay.lc.api.message.MqMessageService;
import com.cifpay.lc.constant.enums.MessageEnum;
import com.cifpay.lc.std.sched.task.BaseTask;

@Component
public class SmsSendTask extends BaseTask {

	@Autowired
    private MqMessageService messageService;
	
	/**
	 * 自动发送短信
	 * 每1分钟执行一次,扫描cifpay_message表获取消息记录，
	 * 条件为:
	 *  1:当前时间 >= plan_time
	 *  2:状态为待处理
	 *  3：每次最大取50条
	 *  4：每次定时任务执行，处理完所有符合条件的消息
	 *  5：增加分布式锁，避免多个节点部署scheduler处理资源竞争问题，解决HA问题
	 */
	@Scheduled(cron = "0 */5 * * * *")
	public void handleAutoApplyLc() {
		String threadName = Thread.currentThread().getName();
        if (logger.isInfoEnabled()) {
            logger.info("============= 开始处理SMS相关消息 ，threadName:{}==================", threadName);
        }

        messageService.retryMessage(MessageEnum.MsgType.SMS, MessageEnum.Scene.SENDSMS, null);

        if (logger.isInfoEnabled()) {
            logger.info("============= 处理SMS相关消息结束 ，threadName:{}==================", threadName);
        }
	}
	
}
