<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="characterEncoding" value="UTF-8"/>
	<property name="logFolder" value="c:/app/cifpaylc/mock-merchant/logs"/>
	
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logFolder}/cifpaylc-mock-merchant.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 原则上每天分隔一个log文件，并通过zip压缩 -->
			<fileNamePattern>${logFolder}/cifpaylc-mock-merchant.%d{yyyyMMdd}.%i.log.zip</fileNamePattern>
			<!-- 最多保留90个log归档文件 -->
			<maxHistory>90</maxHistory>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- 若同一天的log文件超过100MB，则每100MB拆分新文件 -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%thread] %logger{30} %msg%n
			</pattern>
			<charset>${characterEncoding}</charset>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger{30} %msg%n</pattern>
			<charset>${characterEncoding}</charset>
		</encoder>
	</appender>

	<logger name="mock.merchant" additivity="false"
		level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="com.cifpay.lc" additivity="false"
		level="DEBUG">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.apache.http.headers" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.apache.http.wire" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="com.alibaba.dubbo.remoting.exchange.support.header.HeartbeatHandler" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="com.alibaba.dubbo" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.springframework.core.type.classreading.AnnotationAttributesReadingVisitor" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="org.springframework" additivity="false"
		level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>